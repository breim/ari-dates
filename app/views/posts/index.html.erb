<p id="notice"><%= notice %></p>


<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    Filtro do Mrs Ari
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation"><%= link_to "Esse mês", posts_path %></li>
    <li role="presentation"><%= link_to "Mês passado",posts_path(mes_passado: true),role: "menuitem" ,tabindex: "-1" %></li>
    <li role="presentation"><%= link_to "Ano passado",posts_path(ano_passado: true),role: "menuitem" ,tabindex: "-1" %></li>
  </ul>
</div>


<h4>Listando as postagis..</h4>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Data da publicacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description[0..50] %></td>
        <td><%= post.created_at.strftime("postado em %b, %m %Y - %H:%M") %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

